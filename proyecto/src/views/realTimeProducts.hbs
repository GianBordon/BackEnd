    <h1 class="title"> Pagina de los Productos</h1>

    {{!-- Formulario para agregar productos  --}}
<div class="container">
    <form class="form" id="createProductForm" enctype="multipart/form-data">
        <div class="row">
            <div class="column">
                <input type="text" placeholder="Nombre del producto" name="title" />
                <br /><br />
                <input type="text" placeholder="Descripción del producto" name="description" />
                <br /><br />
                <input type="text" placeholder="Código del producto" name="code" />
                <br /><br />
            </div>
            <div class="column">
                <input type="number" placeholder="Precio del producto" name="price" />
                <br /><br />
                <input type="number" placeholder="Stock del producto" name="stock" />
                <br /><br />
                <input type="text" placeholder="Categoría del producto" name="category" />
                <br /><br />
            </div>
        </div>
        <div class="row">
            <div class="column center">
                <button type="submit">Agregar producto</button>
            </div>
        </div>
    </form>
</div>



    <!-- Lista de productos -->
    <h2>Listado de productos</h2>
    <ul class="products" id="productList"></ul>

