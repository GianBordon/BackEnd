<h1 class="title">Detalles del Carrito</h1>
<p class="sub-title">ID del Carrito: {{cart._id}}</p>

<div class="product-list">
    <ul class="product-cards">
        {{#each cart.products}}
        <li class="product-card">
            <img src="{{this.productId.thumbnail}}" alt="{{this.productId.title}}">
            <div class="product-details">
                <h5 class="product-title">{{this.productId.title}}</h5>
                <p class="product-price">Precio: ${{this.productId.price}}</p>
            </div>
        </li>
        {{/each}}
    </ul>
</div>

<script src="/js/carrito.js"></script>




